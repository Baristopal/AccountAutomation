@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
    </MudAppBar>
    <AuthorizeView>
        <Authorized>
            <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
                <MudDrawerHeader Style="background-color:#594ae2">
                    <MudText Typo="Typo.h5" Class="mt-1" Style="color:white">Muhasebe</MudText>
                </MudDrawerHeader>
                <NavMenu></NavMenu>
            </MudDrawer>
        </Authorized>
    </AuthorizeView>
    <MudMainContent Style="overflow:hidden">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                <ErrorDetail Error="ex" />
            </ErrorContent>
        </ErrorBoundary>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}